<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs") %>
</head>
<body>
    <%- include("../partials/nav.ejs") %>

    <div>
        <h2>All blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
            <a href="/blogs/<%= blog._id %>">
              <h3 class="title"><%= blog.title %></h3>
            </a>
      
            <% }) %>
          <% } else { %>
            <p>There are no blogs to display...</p>
          <% } %>
    </div>
</body>
</html>